{
  "manifest_version": 3,
  "name": "OpenChrome",
  "version": "0.1.0",
  "description": "Enable parallel Claude Code sessions with independent browser automation - no more 'Detached' errors",

  "permissions": [
    "tabs",
    "tabGroups",
    "debugger",
    "activeTab",
    "scripting",
    "nativeMessaging",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "OpenChrome"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "externally_connectable": {
    "ids": ["*"],
    "matches": ["*://localhost/*"]
  },

  "key": ""
}
